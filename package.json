{
    "name": "@lapidist/styles",
    "version": "0.0.0",
    "description": "Lapidist styles",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/styles.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/styles/issues"
    },
    "homepage": "https://github.com/bylapidist/styles#readme",
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/es5",
    "typings": "dist/es5",
    "keywords": [
        "lapidist",
        "styles"
    ],
    "scripts": {
        "lint": "eslint . --ext js,ts,tsx",
        "fix": "eslint --fix . --ext js,ts,tsx",
        "watch": "cross-env NODE_ENV=development tsc -w",
        "watch:tests": "cross-env NODE_ENV=test jest --watch",
        "clean": "rimraf dist",
        "build": "npm run clean && npm run build:es5 && npm run build:css",
        "build:es5": "cross-env NODE_ENV=production tsc --outDir dist/es5 -p tsconfig.json",
        "build:css": "node ./dist/es5/index.js",
        "build:docs": "typedoc src/index.ts",
        "test": "npm run lint && npm run test:unit",
        "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "fs-extra": "10.1.0"
    },
    "devDependencies": {
        "@lapidist/linting": "3.1.0",
        "@types/fs-extra": "9.0.13",
        "@types/jest": "29.2.3",
        "cross-env": "7.0.3",
        "csstype": "3.1.1",
        "husky": "8.0.2",
        "jest": "29.3.1",
        "lint-staged": "13.0.3",
        "rimraf": "3.0.2",
        "ts-jest": "29.0.3",
        "typedoc": "0.23.21",
        "typescript": "4.9.3"
    },
    "engines": {
        "node": "^16.0.0"
    },
    "browserslist": [
        "> 0.55%",
        "not IE 11",
        "not IE_Mob 11",
        "not Op_Mini all",
        "not Safari < 12"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    }
}
